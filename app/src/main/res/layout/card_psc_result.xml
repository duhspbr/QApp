            </View>

            <TextView
                android:id="@+id/textv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="460dp"
                android:layout_marginTop="15dp"
                android:text="Qntde amostra"
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/text_view_quantidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textv"
                android:layout_marginStart="460dp"
                android:text="450"
                android:textSize="24sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textv8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="360dp"
                android:layout_marginTop="15dp"
                android:text="Qntde lote"
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/text_view_quantidade_l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textv8"
                android:layout_marginStart="360dp"
                android:text="450"
                android:textSize="24sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Turno"
                android:textStyle="bold|italic"
                android:textSize="18sp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="180dp"/>

            <TextView
                android:id="@+id/text_view_turno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:text="diurno a"
                android:textSize="24sp"
                android:textStyle="italic|bold"
                android:layout_below="@+id/textv2"
                android:layout_marginStart="180dp"/>

            <View
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:background="#B1B1B1"
                android:layout_below="@+id/textv2"
                android:layout_marginStart="180dp">
            </View>

            <TextView
                android:id="@+id/textv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_produto"
                android:text="Item"
                android:textStyle="bold|italic"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"/>

            <View
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:background="#B1B1B1"
                android:layout_below="@+id/textv1"
                android:layout_marginStart="20dp">
            </View>

            <TextView
                android:id="@+id/text_view_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="Item 1. 4 conf"
                android:textSize="24sp"
                android:textStyle="italic|bold"
                android:layout_below="@+id/textv1"
                android:layout_marginStart="20dp"/>

        </RelativeLayout>


