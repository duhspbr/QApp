<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".login.LoginRecord">

    <androidx.cardview.widget.CardView
        android:layout_width="450dp"
        android:layout_height="426dp"
        android:layout_gravity="center"
        android:elevation="10dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="426dp">

            <TextView
                android:id="@+id/lblLogin"
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Dados"
                android:textSize="50dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblLogin"
                android:layout_marginTop="10dp"
                android:text="UsuÃ¡rio: "
                android:textSize="18sp"
                android:layout_marginLeft="40dp" />

            <EditText
                android:id="@+id/editUser"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_below="@+id/lblLogin"
                android:singleLine="true"
                android:layout_toRightOf="@+id/lblUser"
                android:layout_marginLeft="20dp"/>


            <TextView
                android:id="@+id/lblSenha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblUser"
                android:layout_marginTop="40dp"
                android:text="Senha: "
                android:textSize="18sp"
                android:layout_marginLeft="40dp" />

            <EditText
                android:id="@+id/editSenha"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/editUser"
                android:singleLine="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/lblUser"/>


            <TextView
                android:id="@+id/lblConfirmar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblSenha"
                android:layout_marginTop="40dp"
                android:text="Confirmar senha: "
                android:textSize="18sp"
                android:layout_marginLeft="40dp" />

            <EditText
                android:id="@+id/editConfirmar"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/editSenha"
                android:singleLine="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/lblConfirmar"/>

            <Button
                android:id="@+id/btnSalvar"
                android:layout_width="229dp"
                android:layout_height="70dp"
                android:layout_below="@id/editConfirmar"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="43dp"
                android:layout_marginEnd="105dp"
                android:layout_marginBottom="53dp"
                android:background="#5E6060"
                android:text="Salvar"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:layout_gravity="bottom"
        android:layout_height="50dp"
        android:layout_width="350dp"
        android:background="@drawable/thaleslogo">
    </View>

</androidx.coordinatorlayout.widget.CoordinatorLayout>