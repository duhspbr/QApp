<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="5dp"
    android:elevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relative_view_not_expand1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maquina"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"/>

            <View
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:background="#B1B1B1"
                android:layout_below="@+id/textv1"
                android:layout_marginStart="20dp">
            </View>

            <TextView
                android:id="@+id/text_view_maquina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#DOD1"
                android:textSize="24sp"
                android:textStyle="italic|bold"
                android:layout_below="@+id/textv1"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Turno"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/textv1"
                android:layout_marginTop="20dp"
                android:layout_marginStart="70dp"/>

            <TextView
                android:id="@+id/text_view_turno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:text="diurno a"
                android:textSize="24sp"
                android:textStyle="italic|bold"
                android:layout_below="@+id/textv2"
                android:layout_toRightOf="@+id/textv1"
                android:layout_marginStart="70dp"/>

            <View
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:background="#B1B1B1"
                android:layout_below="@+id/textv2"
                android:layout_toRightOf="@id/textv1"
                android:layout_marginStart="70dp">
            </View>

            <TextView
                android:id="@+id/textv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cliente"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/textv1"
                android:layout_marginTop="20dp"
                android:layout_marginStart="240dp"/>

            <View
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:background="#B1B1B1"
                android:layout_below="@+id/textv4"
                android:layout_toRightOf="@+id/textv1"
                android:layout_marginStart="240dp">
            </View>

            <TextView
                android:id="@+id/text_view_cliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="480dp"
                android:text="Banco C6"
                android:textSize="24sp"
                android:textStyle="italic|bold"
                android:layout_below="@+id/textv4"
                android:layout_toRightOf="@+id/textv1"
                android:layout_marginStart="240dp"/>


            <TextView
                android:id="@+id/text_view_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@id/textv1"
                android:layout_marginStart="410dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="23/12/2020"
                android:textSize="12sp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/text_view_hora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_data"
                android:layout_toRightOf="@id/textv1"
                android:layout_marginStart="435dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="15:50"
                android:textSize="12sp"
                android:textStyle="italic|bold" />

        </RelativeLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>