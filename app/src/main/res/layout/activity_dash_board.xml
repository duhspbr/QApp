<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#070707"
    tools:context=".ui.dashboard.DashboardActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:text="Resumo"
            android:textSize="40sp"
            android:textColor="#FFFFFF"
            android:maxLines="2"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtViewTitulo0"
            android:layout_below="@+id/txtView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:text="Dados DOD"
            android:textSize="28sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView0"
            android:layout_below="@+id/txtViewTitulo0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="15dp"
            app:cardBackgroundColor="#2DD3CDCD">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtViewRejeitos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15sp"
                    android:layout_marginTop="15sp"
                    android:text="GAV #1"
                    android:textColor="#2196F3"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_view_gav1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtViewRejeitos"
                    android:layout_marginLeft="15sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="20dp"
                    android:text="120"
                    android:textColor="#FFFFFF"
                    android:textSize="42sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtViewUn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtViewRejeitos"
                    android:layout_marginTop="32sp"
                    android:layout_toRightOf="@+id/text_view_gav1"
                    android:text="u"
                    android:textColor="#A3A1A1"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/txtViewRejeito2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="15sp"
                    android:text="GAV #2"
                    android:textColor="#2196F3"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_view_gav2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtViewRejeito2"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="20dp"
                    android:text="10"
                    android:textColor="#FFFFFF"
                    android:textSize="42sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtViewUn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtViewRejeito2"
                    android:layout_marginTop="32sp"
                    android:layout_toRightOf="@+id/text_view_gav2"
                    android:text="u"
                    android:textColor="#A3A1A1"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/txtViewRejeito3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="240dp"
                    android:layout_marginTop="15sp"
                    android:text="PACK ENTRADA"
                    android:textColor="#2196F3"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_view_pack_entrada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtViewRejeito3"
                    android:layout_marginLeft="240dp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="20dp"
                    android:text="110"
                    android:textColor="#FFFFFF"
                    android:textSize="42sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtViewUn3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtViewRejeito2"
                    android:layout_marginTop="32sp"
                    android:layout_toRightOf="@+id/text_view_pack_entrada"
                    android:text="u"
                    android:textColor="#A3A1A1"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/txtViewRejeito4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="420dp"
                    android:layout_marginTop="15sp"
                    android:text="PACK SAÃDA"
                    android:textColor="#2196F3"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_view_pack_saida"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtViewRejeito3"
                    android:layout_marginLeft="420dp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="20dp"
                    android:text="05"
                    android:textColor="#FFFFFF"
                    android:textSize="42sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtViewUn4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtViewRejeito2"
                    android:layout_marginTop="32sp"
                    android:layout_toRightOf="@+id/text_view_pack_saida"
                    android:text="u"
                    android:textColor="#A3A1A1"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/separ1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/text_view_gav1"
                    android:layout_marginLeft="30dp"
                    android:background="#6BAFACAC"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:id="@+id/txtViewReject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/separ1"
                    android:layout_marginLeft="15sp"
                    android:text="Rejeito/Total"
                    android:textColor="#2196F3"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtViewTotalDia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtViewReject"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="5dp"
                    android:text="245"
                    android:textColor="#FFFFFF"
                    android:textSize="42sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtViewUn6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtViewReject"
                    android:layout_marginTop="24sp"
                    android:layout_toRightOf="@+id/txtViewTotalDia"
                    android:text="u/dia"
                    android:textColor="#A3A1A1"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/rect1"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_below="@+id/txtViewTotalDia"
                    android:layout_marginLeft="15dp"
                    />


                <TextView
                    android:id="@+id/txtViewTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rect1"
                    android:layout_marginLeft="15dp"
                    android:text="8.450"
                    android:textColor="#FFFFFF"
                    android:textSize="42sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtViewUn5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rect1"
                    android:layout_marginTop="24sp"
                    android:layout_toRightOf="@+id/txtViewTotal"
                    android:text="u/dia"
                    android:textColor="#A3A1A1"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/rect2"
                    android:layout_width="450dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="20dp"
                    android:layout_below="@+id/txtViewTotal"
                    android:layout_marginLeft="15dp"
                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/txtViewTitulo1"
            android:layout_below="@+id/cardView0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:text="Dados PSC"
            android:textSize="28sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView1"
            android:layout_below="@+id/txtViewTitulo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="15dp"
            app:cardBackgroundColor="#2DD3CDCD">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtViewTotalAudit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15sp"
                    android:layout_marginTop="15sp"
                    android:text="Auditorias"
                    android:textColor="#2196F3"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_view_total_psc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtViewTotalAudit"
                    android:layout_marginLeft="15sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="20dp"
                    android:text="120"
                    android:textColor="#FFFFFF"
                    android:textSize="42sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtViewNoks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160sp"
                    android:layout_marginTop="15sp"
                    android:text="Noks"
                    android:textColor="#2196F3"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_view_total_psc_nok_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtViewNoks"
                    android:layout_marginLeft="160sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="20dp"
                    android:text="02"
                    android:textColor="#F43636"
                    android:textSize="42sp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</ScrollView>