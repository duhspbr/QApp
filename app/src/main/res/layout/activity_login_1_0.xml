<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".ui.login.LoginMainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="10dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lblLogin"
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="50dp"
                android:text="Login"
                android:textSize="50dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editUser"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/lblLogin"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_login"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textSize="28dp"
                android:background="@drawable/border_edit_text"
                android:hint="   User" />

            <EditText
                android:id="@+id/editPass"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/editUser"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="20dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:drawableLeft="@drawable/ic_lock"
                android:background="@drawable/border_edit_text"
                android:hint="   Senha"
                android:textSize="28dp"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/btnLogar"
                android:layout_width="229dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/editPass"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="50dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="53dp"
                android:background="#5E6060"
                android:text="Logar"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textVNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UsuÃ¡rio novo?"
                android:textColor="#3949AB"
                android:textStyle="bold|normal"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/btnLogar"
                android:layout_marginBottom="40dp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:layout_gravity="bottom"
        android:layout_height="50dp"
        android:layout_width="350dp"
        android:background="@drawable/thaleslogo">
    </View>

</androidx.coordinatorlayout.widget.CoordinatorLayout>