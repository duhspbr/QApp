<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#070707"
    tools:context=".ui.psc.PscRecordActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/lblTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25sp"
            android:text="Registros \nAuditorias PSC"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            android:textStyle="bold"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView0"
            android:layout_below="@+id/lblTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="30dp"
            app:cardBackgroundColor="#2DD3CDCD">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="45dp"
                    android:textColor="#2196F3"
                    android:text="TURNO"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <Spinner
                    android:id="@+id/spinner_turno"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/textv1"
                    android:layout_marginStart="30dp"
                    android:backgroundTint="#FBFBFB"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/textv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/spinner_turno"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:textColor="#2196F3"
                    android:text="LINHA"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <Spinner
                    android:id="@+id/spinner_linha"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/textv2"
                    android:layout_marginStart="30dp"
                    android:backgroundTint="#FFFFFF"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:id="@+id/textv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/textv1"
                    android:layout_marginStart="220dp"
                    android:layout_marginTop="45dp"
                    android:textColor="#2196F3"
                    android:text="CLIENTE"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <Spinner
                    android:id="@+id/spinner_clientes"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/textv1"
                    android:layout_toRightOf="@+id/textv1"
                    android:layout_marginStart="220dp"
                    android:backgroundTint="#FBFBFB"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"/>

                <EditText
                    android:id="@+id/editTextProdutoAudit"
                    android:layout_width="160dp"
                    android:layout_height="45dp"
                    android:layout_below="@+id/textv2"
                    android:layout_toRightOf="@+id/textv1"
                    android:layout_marginStart="220sp"
                    android:hint="Produto auditado"
                    android:textSize="22sp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF" />

                <EditText
                    android:id="@+id/editTextID"
                    android:layout_width="160dp"
                    android:layout_height="45dp"
                    android:layout_below="@+id/editTextQtde"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginStart="30dp"
                    android:hint="ID da ordem"
                    android:textSize="22sp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF" />

                <EditText
                    android:id="@+id/editTextQtdeLote"
                    android:layout_width="160dp"
                    android:layout_height="45dp"
                    android:layout_below="@+id/spinner_linha"
                    android:layout_marginStart="220dp"
                    android:layout_toRightOf="@+id/textv1"
                    android:layout_marginTop="30dp"
                    android:hint="Qntde do lote"
                    android:inputType="number"
                    android:textSize="22sp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"/>

                <EditText
                    android:id="@+id/editTextQtde"
                    android:layout_width="160dp"
                    android:layout_height="45dp"
                    android:layout_below="@+id/spinner_linha"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="30dp"
                    android:hint="Qntde da amostra"
                    android:inputType="number"
                    android:textSize="22sp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView_pontosauditados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardView0"
            android:layout_marginLeft="25sp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:textSize="32sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:text="Pontos auditados"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/psc_rcv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/card_psc"
            android:layout_below="@+id/textView_pontosauditados"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

        </androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>


</ScrollView>